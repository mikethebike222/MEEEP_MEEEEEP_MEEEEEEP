        <script>
            var registerbttn = document.getElementById("registerbttn");
            registerbttn.addEventListener("click", validation);


            function validation(){
                var bHasError = false;
                var username = document.getElementById('username').value;
                var age = parseInt(document.getElementById('age').value);
                var genders = document.getElementsByName('gender');
                var gender = 'none';
                for(i = 0; i < genders.length; i++) {
                    if(genders[i].checked) {
                        gender = genders[i].value;
                        break;
                    }
                }
                var password = document.getElementById('password').value;
                var email = document.getElementById('email').value;
                var confirmEmail = document.getElementById('confirmEmail').value;
                var feedback = document.getElementById('feedback');
                feedback.innerHTML = '';

                if (username.length < 5) {
                    feedback.innerHTML += '• Please enter a valid username (>=5 chars)' + "<br />";
                    bHasError = true;
                }
                if (password.length < 5) {
                    feedback.innerHTML += '• Please enter a valid password (>=5 chars)' + "<br />";
                    bHasError = true;
                } else if (password.includes('*') || password.includes('$')) {
                    feedback.innerHTML += '• Please enter a valid password (do not include $ and *)' + "<br />";
                    bHasError = true;
                }
                if (email != confirmEmail) {
                    feedback.innerHTML += '• Your emails do not match' + "<br />";
                    bHasError = true;
                } else if (email.length < 5) {
                    feedback.innerHTML += '• Please enter valid email addreses (>=5 chars)' + "<br />";
                    bHasError = true;
                } else if (!email.includes('@')) {
                    feedback.innerHTML += '• Please enter valid email addreses (include @)' + "<br />";
                    bHasError = true;
                } else if (!email.includes('.')) {
                    feedback.innerHTML += '• Please enter valid email addreses (include .)' + "<br />";
                    bHasError = true;
                } else if (email.indexOf('@') > email.indexOf('.')) {
                    feedback.innerHTML += '• Please enter valid email addreses (@ before .)' + "<br />";
                    bHasError = true;
                }
                if (age < 18) {
                    feedback.innerHTML += '• Invalid age (>=18)' + "<br />";
                    bHasError = true;
                }
                if (gender == 'none') {
                    feedback.innerHTML += '• Select your gender' + "<br />";
                    bHasError = true;
                }
                
                if (bHasError) {
                    feedback.classList.remove('bg-info');
                    feedback.classList.add('bg-danger');
                } else {
                    feedback.classList.remove('bg-danger');
                    feedback.classList.add('bg-info');
                    feedback.innerHTML += 'Thanks for registering' + "<br />";
                }
                feedback.style.opacity = 1;
            }
        </script>
